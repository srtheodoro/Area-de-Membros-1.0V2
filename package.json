{
  "name": "ead-platform-pro",
  "version": "1.0.0",
  "description": "LMS Platform for Hostinger Deployment",
  "main": "server/index.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "client:install": "cd client && npm ci",
    "client:build": "cd client && npm run build",
    "build": "npm run client:install && npm run client:build",
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}